{
    "name": "afrux/forum-widgets-core",
    "description": "Core Extension for Managing Forum Widgets",
    "keywords": [
        "flarum"
    ],
    "funding": [
        {
            "type": "other",
            "url": "https://www.buymeacoffee.com/sycho"
        }
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "homepage": "https://afrux.github.io",
    "support": {
      "issues": "https://github.com/afrux/forum-widgets-core/issues",
      "source": "https://github.com/afrux/forum-widgets-core",
      "forum": "https://discuss.flarum.org/"
    },
    "require": {
        "flarum/core": "^1.0.0"
    },
    "require-dev": {
        "flarum/testing": "^1.0.0"
    },
    "authors": [
        {
            "name": "Sami Mazouz",
            "email": "sychocouldy@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Afrux\\ForumWidgets\\": "src/"
        },
        "files": ["src/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Afrux\\ForumWidgets\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Forum Widgets",
            "category": "",
            "icon": {
                "image": "icon.svg"
            }
        },
        "flagrow": {
            "discuss": ""
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit -c tests/phpunit.unit.xml",
        "test:integration": "phpunit -c tests/phpunit.integration.xml",
        "test:setup": "@php tests/integration/setup.php"
    },
    "scripts-descriptions": {
        "test": "Runs all tests.",
        "test:unit": "Runs all unit tests.",
        "test:integration": "Runs all integration tests.",
        "test:setup": "Sets up a database for use with integration tests. Execute this only once."
    }
}
